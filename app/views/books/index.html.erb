<h1 class="current-category"><%= params[:category] %></h1>

<% if @books.count == 0 %>
  <h3>There are no books currently in this category.</h3>
<% else %>
  <div class="raw">
    <% @books.each do |book| %>
      <div class="col-md-3">
        <a href="/books/<%= book.id %>">
          <%= image_tag book.book_img.url, class: "book" %>
        </a>
      </div>
    <% end %>
  </div>
<% end %>
